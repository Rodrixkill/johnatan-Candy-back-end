{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "./lib",
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "esModuleInterop": true, 
    "skipLibCheck": true,                     /* Skip type checking of declaration files. */
    "forceConsistentCasingInFileNames": true,
    "allowJs": true
  },
  "compileOnSave": true,
  "include": [
    "src"
, "../src/controllers"  ]
}
